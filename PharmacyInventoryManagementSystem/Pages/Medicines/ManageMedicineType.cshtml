@page
@model PharmacyInventoryManagementSystem.Pages.Medicines.ManageMedicineTypeModel
@{
}

<div class="container mb-4 row gap-3">
    <a class="btn btn-primary col-sm-2" href="/Medicines/CreateMedicine/">Add medicine</a>
    <a class="btn btn-primary col-sm-2" href="/Medicines/SellMedicine/">Sell medicine</a>
    <a class="btn btn-primary col-sm-3" href="/Medicines/ManageMedicineCategory/">Manage medicine category</a>
    <a class="btn btn-primary col-sm-3" href="/Medicines/ManageMedicineType/">Manage medicine type</a>
</div>

<div class="container">
    <form method="POST" class="mb-5 mt-6">
        <div class="mb-3">
            <label class="form-label">Type name</label>

            <div class="row gap-2">
                <div class="col">
                    <input type="text" class="form-control col-3" name="type_name" value="@Model.type.type_name" />
                </div>
                <div class="col">
                    <button type="submit" class="btn btn-success col-3">Create</button>
                </div>
            </div>
        </div>
    </form>
    <h3 class="text-dark mb-3">List of medicine types</h3>

    <table class="table">
        <thead>
            <tr>
                <th>Type name</th>
                <th>Created date</th>
                <th>Creator</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var type in Model.listTypes)
            {
                <tr>
                    <td>@type.type_name</td>
                    <td>@type.created_date</td>
                    <td>@type.creator</td>
                    <td>
                        <a href="/Patients/edit?id=@type.type_id" class="btn btn-warning">Edit</a>
                        <a href="/Patients/delete?id=@type.type_id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>