@page
@model PharmacyInventoryManagementSystem.Pages.Suppliers.ManageSuppliersModel
@{
}

<div class="container mb-4 row gap-3">
    <a class="btn btn-primary col-sm-3" href="/Medicines/CreateMedicine/">Add medicine</a>
    <a class="btn btn-primary col-sm-3" href="/Medicines/ManageMedicineCategory/">Manage medicine category</a>
    <a class="btn btn-primary col-sm-3" href="/Medicines/ManageMedicineType/">Manage medicine type</a>
</div>

<div class="container">
    <form method="POST" class="mb-5 mt-6 row">
        <div class="row mb-3 gap-2">
            <div class="col-sm-4">
                <label class="form-label">Supplier name</label>
                <div class="col">
                    <input type="text" class="form-control col-3" name="supplier_name" value="@Model.supplier.supplier_name" />
                </div>
            </div>
            <div class="col-sm-6">
                <label class="form-label">Description</label>
                <textarea class="form-control" name="description" value="@Model.supplier.description"></textarea>
            </div>
        </div>
        <div>
            <button type="submit" class="btn btn-success col-3">Create</button>
        </div>
    </form>
    <h3 class="text-dark mb-3">List of medicines suppliers</h3>

    <table class="table">
        <thead>
            <tr>
                <th>Supplier name</th>
                <th>Description</th>
                <th>Created date</th>
                <th>Creator</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var supplier in Model.listOfSuppliers)
            {
                <tr>
                    <td>@supplier.supplier_name</td>
                    <td>@supplier.description</td>
                    <td>@supplier.created_date</td>
                    <td>@supplier.creator</td>
                    <td>
                        <a href="/Suppliers/EditSupplier/edit?id=@supplier.supplier_id" class="btn btn-warning">Edit</a>
                        <a href="/Suppliers/DeleteSupplier/delete?id=@supplier.supplier_id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
